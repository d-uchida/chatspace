.chat-group-form
  %h1 新規チャットグループ
  = form_for(@group) do |f|
    #new_chat_group
      = render "error"

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        グループ名
      .chat-group-form__field--right
        %input.chat-group-form__field--right___input{name: "group[name]", id:"group_name", placeholder: "グループ名を入力してください"}

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        チャットメンバーを追加

      .chat-group-form__field--right.clearfix
        %input.chat-group-form__field--right___input{ id:"user-search-field", placeholder: "追加したいユーザー名を入力してください", type: "text" }
        #chat_member_candidate

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        チャットメンバー
      .chat-group-form__field--right{id: "added_chat_member"}
        %div{class: "chat-group-user clearfix", id: "chat-group-user-#{current_user.id}"}
          %input{name: "group[user_ids][]", type:"hidden", value: "#{current_user.id}"}
            %p{ class: "chat-group-user__name"}
              = current_user.name


    .chat-group-form__field.clearfix.chatmember
      .chat-group-form__field--left
      .chat-group-form__field--right
        .chat-group-form__field--right__action-btn
          = f.submit(value: "登録する")

