- @group.messages.each do |group_message|
  .right-messages__middle--user{ data: {message_id: "#{group_message.id}"}}
    .right-messages__middle--user__list
      = group_message.user.name
      %span
        = group_message.created_at
    .right-messages__middle--message
      = group_message.text if group_message.text.present?
    .right-messages__middle--image
      = image_tag group_message.image.to_s if group_message.image.present?
